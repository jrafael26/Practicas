@model IEnumerable<WebApplicationMovies.Models.Movie>

@{
    ViewBag.Title = "My Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="danger">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td class="text-right">
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-edit btn btn-info btn-xs" })
                @Html.ActionLink(" ", "Details", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-list btn btn-success btn-xs" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-remove btn btn-danger btn-xs"})
                @*@Html.ActionLink(" ", null, new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-remove btn btn-danger btn-xs", @id = "dialog-confirm" })*@
            </td>



            @*<td>
                    <div class="btn-group">

                        <button type="button" class="btn-primary">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </button>
                        <button type="button" class="btn-success">
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </button>
                        <button type="button" class="btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </button>
                    </div>
                </td>*@
        </tr>

    }

</table>
@section Scripts
{
    <script>
  $( function() {
    $( "#dialog-confirm" ).dialog({
      resizable: false,
      height: "auto",
      width: 400,
      modal: true,
      buttons: {
        "Delete all items": function() {
          $( this ).dialog( "Delete" );
        },
        Cancel: function() {
          $( this ).dialog( "close" );
        }
      }
    });
  } );
    </script>
}